#include <input/processors.dtsi>
#include <behaviors.dtsi>
#include <dt-bindings/zmk/bt.h>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/pointing.h>

/ {
    combos { compatible = "zmk,combos"; };

    keymap {
        compatible = "zmk,keymap";

        default_layer {
            bindings = <
&kp Q             &kp W      &kp E         &kp R        &kp T           &kp Y              &kp U        &kp I          &kp O    &kp P
&kp A             &kp S      &kp D         &kp F        &kp G           &kp H              &kp J        &kp K          &kp L    &kp ENTER
&mt LEFT_SHIFT Z  &kp X      &kp C         &kp V        &kp B           &kp N              &kp M        &kp COMMA      &kp DOT  &kp SLASH
&kp LEFT_ALT      &kp LCTRL  &kp LEFT_GUI  &lt 1 LANG1  &kp LEFT_SHIFT  &kp LS(LG(COMMA))  &lt 2 SPACE  &kp BACKSPACE  &mo 4    &lt 3 ESCAPE
&none &none &none &none &none &none &none &none
            >;
        };

        num {
            bindings = <
&kp NUMBER_1    &kp NUMBER_2  &kp NUMBER_3  &kp NUMBER_4  &kp NUMBER_5  &kp NUMBER_6  &kp NUMBER_7  &kp NUMBER_8  &kp NUMBER_9  &kp NUMBER_0
&kp LCTRL       &none         &none         &none         &none         &none         &none         &none         &none         &kp SEMICOLON
&kp LEFT_SHIFT  &none         &none         &none         &none         &none         &none         &none         &none         &kp GRAVE
&trans          &trans        &trans        &trans        &trans        &trans        &trans        &trans        &trans        &trans
&none &none &none &none &none &none &none &none
            >;
        };

        symbol {
            bindings = <
&kp EXCLAMATION  &kp AT_SIGN  &kp HASH  &kp DOLLAR  &kp PERCENT  &kp CARET      &kp AMPERSAND  &kp ASTERISK      &kp LEFT_PARENTHESIS  &kp RIGHT_PARENTHESIS
&none            &none        &none     &none       &none        &kp MINUS      &kp EQUAL      &kp LEFT_BRACKET  &kp RIGHT_BRACKET     &kp SQT
&none            &none        &none     &none       &none        &kp LS(MINUS)  &kp LS(EQUAL)  &kp LEFT_BRACE    &kp RIGHT_BRACE       &kp BACKSLASH
&trans           &trans       &trans    &trans      &trans       &trans         &trans         &trans            &trans                &trans
&none &none &none &none &none &none &none &none
            >;
        };

        arrow {
            bindings = <
&kp TAB         &kp C_MUTE  &kp C_VOLUME_DOWN  &kp C_VOLUME_UP       &none   &kp LG(LEFT_ARROW)  &mkp MB1        &kp UP_ARROW  &kp RIGHT  &kp LG(RIGHT)
&kp LCTRL       &none       &none              &kp LS(LG(NUMBER_6))  &none   &none               &kp LEFT_ARROW  &kp DOWN      &mkp MB2   &none
&kp LEFT_SHIFT  &none       &none              &kp LS(LG(NUMBER_4))  &none   &kp F1              &kp F2          &kp F3        &kp F4     &none
&trans          &trans      &trans             &trans                &trans  &trans              &trans          &trans        &trans     &trans
&none &none &none &none &none &none &none &none
            >;
        };

        config {
            bindings = <
&bt BT_CLR_ALL  &bt BT_CLR    &none         &none         &none         &none   &none   &none   &none   &bootloader
&none           &none         &none         &none         &none         &none   &none   &none   &none   &none
&bt BT_SEL 0    &bt BT_SEL 1  &bt BT_SEL 2  &bt BT_SEL 3  &bt BT_SEL 4  &none   &none   &none   &none   &none
&trans          &trans        &trans        &trans        &trans        &trans  &trans  &trans  &trans  &trans
&none &none &none &none &none &none &none &none
            >;
        };
    };
};
